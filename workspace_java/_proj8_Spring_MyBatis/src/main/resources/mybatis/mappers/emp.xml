<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.emp">

	<select id="selectEmp" resultType="empDTO">
		select * from emp0
	</select>

	<insert id="insertEmp" parameterType="empDTO">
		INSERT INTO emp0 (
			empno, 
			ename, 
			hiredate
		) VALUES (
			#{empno}, 
			#{ename}, 
			#{hireDate}
		)
	</insert>
	
	<select id="selectEmpOne" resultType="empDTO" parameterType="int">
	
		SELECT
			*
		FROM
			emp0
		WHERE
			empno = #{_parameter}

	</select>

	<update id="updateEmp" parameterType="empDTO">
		UPDATE 
			emp0 
		SET 
			ename = #{ename},
			hireDate = #{hireDate}
		WHERE
			empno = #{empno}
	</update>
	
	<delete id="deleteEmp" parameterType="empDTO">
		DELETE FROM
			emp0
		WHERE
			empno = #{empno}
	</delete>
</mapper>